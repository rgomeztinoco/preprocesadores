fuente-1 = 'Lato', sans-serif
fuente-2 = 'Oswald', sans-serif
color-primario = #333333
color-secundario = #8841da
color-base = #FFFFFF
contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 25px
caja-sombra()
  background-color: color-base
  box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.2)
f-size(size)
  font-size: size
  line-height: unquote('calc(' + size + ' + 1rem)')
titulos(fuente)
  if fuente == fuente-1
    font-family: fuente-1
  else 
    font-family: fuente-2
    font-weight: 600
    text-transform: uppercase
:root 
  --fuente-base: 1.6rem
  --fuente-mediana: 2rem
  --fuente-grande: 2.5rem
*
  box-sizing: border-box
  margin: 0
  padding: 0
html
  font-size: 62.5%
body 
  background-color: color-base
  f-size(var(--fuente-base))
  titulos(fuente-1)