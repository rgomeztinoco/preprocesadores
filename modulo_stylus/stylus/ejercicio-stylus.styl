fuente-1 = 'Lato', sans-serif
fuente-2 = 'Oswald', sans-serif
contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 25px
caja-sombra()
  background-color: var(--color-base)
  box-shadow: 0px 20px 33px 0px rgba(0,0,0,0.2)
:root 
  --color-primario: #333333
  --color-secundario: #8841da
  --color-base: #FFFFFF
*
  box-sizing: border-box
  margin: 0
  padding: 0
html
  font-size: 62.5%
body 
  font-family: fuente-1
  background-color: var(--color-base)
.buscador
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 250px
  padding: 50px 25px
  background-image: url("../images/cover.jpg")
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  text-align: center
  &__input
    width: 100%
    height: 60px
    padding: 20px
    border: none
    border-radius: 30px
    font-size: 2.5rem
.encabezado--con-filtros
  justify-content: space-between
  contenedor()
  h2
    margin-top: 10px
    text-transform: uppercase
    font-weight: 500
    font-size: 3rem
    font-family: fuente-2
  .filtros
    display: flex
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    width: 250px
    height: 250px
    padding: 20px
    align-self: right
    caja-sombra()
    span 
      text-transform: uppercase
      font-family: fuente-2
    a 
      font-size: 2.5rem
      color: var(--color-primario)
.contenido
  flex-wrap: wrap
  justify-content: space-evenly
  gap: 25px
  margin-bottom: 40px
  contenedor()
.caja
  max-width: 400px
  &__contenido
    padding: 20px
    caja-sombra()
    span 
      text-transform: uppercase
      color: var(--color-secundario)
      font-family: fuente-2
    
